<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.emily.beaconside.rowdata">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="98dp"
                android:layout_height="fill_parent"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/beaconImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="30dp"
                    android:textAlignment="3"
                    app:srcCompat="@mipmap/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/beaconName"
                        style="@style/content"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:text="Beacon1"
                        android:textColor="@color/colorDark" />

                    <TextView
                        android:id="@+id/beaconDistance"
                        style="@style/content"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_weight="0.87"
                        android:text="0 m away"
                        android:textColor="@color/colorGreen" />

                    <TextView
                        android:id="@+id/beaconNearby"
                        style="@style/content"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:text=""
                        android:textColor="@color/colorLight" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <!--<android.support.design.widget.AppBarLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:theme="@style/AppTheme.AppBarOverlay">-->

                    <!--<android.support.v7.widget.Toolbar-->
                    <!--android:id="@+id/toolbar"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="?attr/actionBarSize"-->
                    <!--android:background="?attr/colorPrimary"-->
                    <!--app:popupTheme="@styl
                e/AppTheme.PopupOverlay" />-->

                    <!--</android.support.design.widget.AppBarLayout>-->

                    <Button
                        android:id="@+id/item_setting"
                        android:layout_width="41dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/option"
                        android:text="@string/vertical_ellipsis"
                        android:textSize="3sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

