<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_content_bg"
    android:orientation="vertical">

    <!--上層-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/nav_header_b"
        android:orientation="horizontal">

        <!--使用者頭貼和資訊-->
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:paddingBottom="8dp"
            android:text="Hi, Emily"
            android:textColor="@color/nav_header_t"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!--下層-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--選單/分類-->
        <!--android:background="@drawable/side_title_bg"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <!--
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"-->
            <Button
                android:id="@+id/side_group_bt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:background="@drawable/my_group_l"
                android:padding="5dp" />


            <Button
                android:id="@+id/side_class_bt"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:background="@drawable/my_class"
                android:padding="5dp" />
            <!--android:backgroundTint="@drawable/side_title_bg"-->
        </LinearLayout>


        <!--選單下的清單列表，目前是固定的，沒辦法跟著類別做更動-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/by_ctg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1">

                <ScrollView
                    android:id="@+id/sv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <!--<include-->
                    <!--layout="@layout/main_class_side"-->
                    <!--android:id="@+id/id2"-->
                    <!--android:visibility="visible"/>-->
                    <include
                        android:id="@+id/side_group_ls"
                        layout="@layout/main_group_side"
                        android:visibility="visible" />
                </ScrollView>

                <ScrollView
                    android:id="@+id/sv2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <include
                        android:id="@+id/side_class_ls"
                        layout="@layout/main_class_side"
                        android:visibility="gone" />
                </ScrollView>

            </LinearLayout>


            <!--固定在底下的-->
            <Button
                android:id="@+id/side_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:fontFamily="monospace"
                android:text="+ New group"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>